{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Bun Tests",
      "type": "shell",
      "command": "node",
      "args": ["run-tests.js"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Bun Tests (Watch)",
      "type": "shell",
      "command": "bun",
      "args": ["test", "--watch"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Run Specific Test File",
      "type": "shell",
      "command": "bun",
      "args": ["test", "${file}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
