{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Bun Tests",
      "program": "${workspaceFolder}/run-tests.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Bun Tests",
      "program": "${workspaceFolder}/node_modules/.bin/bun",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Main App",
      "program": "${workspaceFolder}/index.ts",
      "cwd": "${workspaceFolder}",
      "env": {},
      "strictEnv": false,
      "watchMode": false,
      "stopOnEntry": false,
      "noDebug": false,
      "runtime": "bun"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests with Node",
      "program": "${workspaceFolder}/node_modules/.bin/bun",
      "args": ["test", "${workspaceFolder}/src/scheduler/__tests__/planner.test.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}